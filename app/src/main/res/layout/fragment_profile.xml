<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/fragment_profile_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_name"
        android:hint="Nome do perfil"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name"
        android:hint="Nome"
        android:textSize="16dp"
        android:layout_below="@+id/label_name"
        android:layout_alignLeft="@+id/label_name"
        android:layout_alignStart="@+id/label_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_combo_gps"
        android:hint="Local (GPS)"
        android:textSize="16dp"
        android:layout_below="@+id/edit_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_gps"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@+id/label_combo_gps"
        android:layout_alignParentEnd="true" ></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_combo_wifi"
        android:hint="Local (Wi-Fi)"
        android:textSize="16dp"
        android:layout_below="@+id/label_combo_gps"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_wifi"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@+id/label_combo_wifi"
        android:layout_alignParentEnd="true" ></Spinner>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/label_wifi"
    android:hint="Wi-Fi"
    android:textSize="16dp"
    android:layout_below="@+id/spinner_wifi"
    android:layout_alignParentStart="true"
    android:layout_marginTop="10dp" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_wifi"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/label_wifi"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_gps"
        android:hint="GPS"
        android:textSize="16dp"
        android:layout_below="@+id/label_wifi"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_gps"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/label_gps"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_data3g"
        android:hint="Dados 3G/4G"
        android:textSize="16dp"
        android:layout_below="@+id/label_gps"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_data3g"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/label_data3g"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_vibrate"
        android:hint="Vibrar"
        android:textSize="16dp"
        android:layout_below="@+id/label_data3g"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_vibrate"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/label_vibrate"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_silence"
        android:hint="Silencioso"
        android:textSize="16dp"
        android:layout_below="@+id/label_vibrate"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_silence"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/label_silence"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALVAR"
        android:id="@+id/btn_save"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCELAR"
        android:id="@+id/btn_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/switch_wifi"
        android:layout_marginEnd="20dp" />

</RelativeLayout>
