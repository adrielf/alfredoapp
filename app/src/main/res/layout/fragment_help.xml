<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.fatec.alfredo.HelpFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/help_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@mipmap/ic_app_alfred"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/help_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/help_text1"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_below="@+id/help_image"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/help_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help_text1"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/help_text2"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
